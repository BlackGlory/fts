{
  "private": true,
  "name": "fts",
  "version": "0.2.5",
  "main": "lib/index.js",
  "repository": "git@github.com:BlackGlory/fts.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --runInBand --config jest.config.js --no-cache",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env FTS_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:pm2": "pm2 start lib/index.js --name 'fts' --wait-ready",
    "start:http2": "cross-env FTS_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag fts .",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run docker:test:clean",
    "docker:coverage": "run-s docker:test:clea docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker-compose --file docker-compose.test.yml build",
    "docker:test:run": "docker-compose --file docker-compose.test.yml run --rm test",
    "docker:test:coverage": "docker-compose --file docker-compose.test.yml run --rm coverage",
    "docker:test:clean": "docker-compose --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build docker:test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.1",
    "@blackglory/jest-matchers": "^0.2.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/accepts": "^1.3.5",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^7.4.2",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.0.3",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "16",
    "@types/pg": "^8.6.2",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.4.1",
    "extra-fetch": "^1.8.4",
    "extra-request": "^3.0.3",
    "extra-response": "^0.3.8",
    "husky": "4",
    "iterable-operator": "^0.14.4",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "jest-json-schema": "^6.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.3.0",
    "pm2": "^5.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.7",
    "@blackglory/errors": "^1.1.2",
    "@blackglory/go": "^0.1.1",
    "@blackglory/pg-migrations": "^0.1.3",
    "@blackglory/types": "^0.6.3",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.4.5",
    "bluebird": "^3.7.2",
    "dotenv": "^10.0.0",
    "extra-filesystem": "^0.4.0",
    "extra-generator": "^0.2.15",
    "extra-sql-builder": "^0.2.9",
    "extra-tags": "^0.2.3",
    "fastify": "^3.25.0",
    "fastify-accepts": "^2.1.0",
    "fastify-bearer-auth": "^6.0.0",
    "fastify-cors": "^6.0.2",
    "fastify-metrics": "^8.0.0",
    "fastify-plugin": "^3.0.0",
    "justypes": "^0.1.6",
    "migrations-file": "^0.2.0",
    "pg": "^8.7.1",
    "pg-promise": "^10.11.1",
    "prom-client": "^14.0.1",
    "value-getter": "^0.2.1"
  }
}
